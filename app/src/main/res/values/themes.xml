<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChessTrainer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Chessboard colors. -->
        <item name="colorHighlightPiece">@color/red</item>
        <item name="boardDarkSquare">@color/dark_green</item>
        <item name="boardLightSquare">@color/light_tan</item>
        <item name="boardTargetSquare">@color/bright_blue</item>
        <item name="boardMoveSquares">@color/light_yellow</item>
    </style>
</resources>